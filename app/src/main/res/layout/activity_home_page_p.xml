<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/FondoHome"
    tools:context=".HomePageP">

    <!-- Encabezado -->
    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="name"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:background="@drawable/header_rectangule"
        android:padding="20dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Información de crédito y puntos -->
    <LinearLayout
        android:id="@+id/creditPointsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Crédito Actual -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Crédito Actual:"
                android:textStyle="bold"
                android:textColor="#19548E"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_marginEnd="55dp" />

            <!-- Cuadro para el monto -->
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="8dp"
                android:background="@drawable/white_box">

                <TextView
                    android:id="@+id/tvMontoTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 Bs."
                    android:textStyle="bold"
                    android:textColor="#19548E"
                    android:textSize="18sp"
                    android:gravity="center" />
            </LinearLayout>
        </LinearLayout>

        <!-- Puntos Acumulados -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical|center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Puntos Acumulados:"
                android:textStyle="bold"
                android:textColor="#19548E"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_marginEnd="16dp" />


            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="8dp"
                android:background="@drawable/white_box">

                <TextView
                    android:id="@+id/tvPuntos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 Pts."
                    android:textStyle="bold"
                    android:textColor="#19548E"
                    android:textSize="18sp"
                    android:gravity="center" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/tvUltimasTransacciones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Últimas Transacciones"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#19548E"
        android:gravity="center"
        android:paddingTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/creditPointsLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />



    <LinearLayout
        android:id="@+id/transactionBox1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="#8fe0ff"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvUltimasTransacciones"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Icono -->
        <ImageView
            android:layout_width="55dp"
            android:layout_height="20dp"
            android:id="@+id/icon1"
            android:layout_marginEnd="8dp"
            android:contentDescription="Icono de transporte público"
            android:src="@drawable/user"
            app:tint="#19548E" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TRANSPORTE PÚBLICO"
                android:id="@+id/tvDescripcion1"
                android:textColor="#19548E"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PAGO NFC"
                android:textColor="#19548E"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18/11/2024 14:35"
                android:id="@+id/tvFecha1"
                android:textColor="#19548E"
                android:textSize="12sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Precio -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2.00 Bs"
            android:id="@+id/tvMonto1"
            android:textColor="#19548E"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Segundo cuadro -->
    <LinearLayout
        android:id="@+id/transactionBox2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="#8fe0ff"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/transactionBox1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <ImageView
            android:layout_width="55dp"
            android:layout_height="20dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="Icono de transporte público"
            android:src="@drawable/user"
            android:id="@+id/icon2"
            app:tint="#19548E" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TRANSPORTE PÚBLICO"
                android:id="@+id/tvDescripcion2"
                android:textColor="#19548E"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PAGO QR"
                android:textColor="#19548E"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18/11/2024 15:00"
                android:id="@+id/tvFecha2"
                android:textColor="#19548E"
                android:textSize="12sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvMonto2"
            android:text="1.50 Bs"
            android:textColor="#19548E"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Tercer cuadro -->
    <LinearLayout
        android:id="@+id/transactionBox3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="#8fe0ff"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/transactionBox2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <ImageView
            android:layout_width="55dp"
            android:id="@+id/icon3"
            android:layout_height="20dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="Icono de transporte público"
            android:src="@drawable/user"
            app:tint="#19548E" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TRANSPORTE PÚBLICO"
                android:id="@+id/tvDescripcion3"
                android:textColor="#19548E"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PAGO QR"
                android:textColor="#19548E"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18/11/2024 15:30"
                android:id="@+id/tvFecha3"
                android:textColor="#19548E"
                android:textSize="12sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3.00 Bs"
            android:textColor="#19548E"
            android:id="@+id/tvMonto3"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>


    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="BottomAppBar">

        <com.google.android.material.bottomappbar.BottomAppBar
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="100dp"
        android:backgroundTint="#19548E"
        app:fabCradleMargin="8dp"
        app:fabCradleRoundedCornerRadius="50dp"
        app:fabCradleVerticalOffset="6dp">




        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageHome"
                        android:layout_width="30dp"
                        android:layout_height="25dp"
                        android:src="@drawable/home_outline"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        app:tint="@android:color/white" />


                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Home"
                        android:textColor="@color/white"
                        android:textAlignment="center" />

                </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageCanjeo"
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:src="@drawable/trophy"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    app:tint="@android:color/white" />


                <TextView
                    android:id="@+id/textCajear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Puntos"
                    android:textColor="@color/white"
                    android:textAlignment="center" />

            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageViewTransaction"
                        android:layout_width="30dp"
                        android:layout_height="25dp"
                        android:src="@drawable/credit_card"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        app:tint="@android:color/white" />


                    <TextView
                        android:id="@+id/textViewTansaction"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Transacción"
                        android:textColor="@color/white"
                        android:textAlignment="center" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageViewSettings"
                        android:layout_width="30dp"
                        android:layout_height="25dp"
                        android:src="@drawable/cog"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        app:tint="@android:color/white" />


                    <TextView
                        android:id="@+id/textViewSettings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ajustes"
                        android:textColor="@color/white"
                        android:textAlignment="center" />

                </LinearLayout>
            </LinearLayout>

        </com.google.android.material.bottomappbar.BottomAppBar>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
